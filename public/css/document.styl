section#document

	header
		margin-bottom	 	30px
		padding 			1px 0
		border-bottom 		2px dotted $ocean
		ul
			padding-left 	0
			overflow 		hidden
			list-style-type 	none
		li
			float 			left
			margin-right 	10px
		li:after
			content 		'>'
		li:last-child:after
			content 		''

	a#save
		display 				inline-block
		float					right
		padding 				5px
		border 				1px solid $magma
		border-radius			3px
		background-color 		$magma_lite
		color 				black
		text-decoration 			none