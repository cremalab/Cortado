section#document

	header
		margin-bottom	 	30px
		padding 			1px 0
		border-bottom 		2px dotted $ocean
		overflow 			hidden
		ul
			overflow 		hidden
		li
			float 			left
			margin-right 	10px
		li:after
			content 		'-->'
			opacity		.2
			padding-left 	10px
		li:last-child:after
			content 		''

	a#save
		display 				inline-block
		float					right
		margin-bottom 			10px
		padding 				5px
		border 				1px solid $magma
		border-radius			3px
		background-color 		$magma_lite
		color 				black
		text-decoration 			none