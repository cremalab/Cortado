@import 			boilerplate

$slate 				= #cccccc
$ocean 				= #b4deeb
$mustard 				= #e9cc19
$grass 				= #a9b328
$magma 				= #cc6600
$seafoam 				= #cae5cb
$seafoam_dk 			= #a6baa6

div#wrap
	width 			960px
	margin			auto

input[type='search']
	-webkit-appearance 	none
	padding 			10px 0 10px 10px
	color 			$slate
	border 			1px solid $slate
	font-size			16px

header
	margin 			40px 0

#breadcrumb
	margin-bottom	 	30px
	border-bottom 		2px dotted $ocean
	ul
		padding-left 	0
		overflow 		hidden
		list-style-type 	none
		li
			float 		left
			margin-right 10px
		.chevron
			margin-left 10px
		li:last-child .chevron
			display 	none

#requests
	width 			225px
	float 				right
	p
		float 			left
		font-size		13px
	div.number
		background-color $ocean
		color 		$magma
		width 		30px
		height 		24px
		border-radius 	40px
		font-size 		15px
		font-weight 	bold
		text-align 		center
		float			right
		margin 		5px 40px 0 0
		padding-top	6px
	div.user_photo
		float 			right

div.user_photo
	width 		40px
	height 		40px
	border-radius 	40px
	overflow 		hidden
	img 
		width 	100%
		height 	auto

.textarea
	font-size 		15px
	width 		100%
	height 		30px
	border 		none

.textarea:focus
	outline 		none

.wrap
	margin-left 	40px
	position		relative
	.handle
		background-color $lava
		height 		10px
		width 		10px
		position		absolute
		left 			0
		top 			0

.hours
	border 			1px solid $seafoam_dk
	border-radius		3px
	background-color	$seafoam
	color 			slate
	display 			inline-block
	font-size			80%
	padding 			2px
